<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Liste des Livres</title>
    <!-- Inclure les fichiers CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Liste des Livres</h1>
        <ul class="list-group">
            <% books.forEach(function(book) { %>
                <li class="list-group-item">
                    <h2><%= book.title %></h2>
                    <p>Livres : <%= book.titre %></p>
                    <p>Auteur : <%= book.auteur %></p>
                    <p>Pages : <%= book.pages %></p>
                    
                    <!-- Boutons pour modifier et supprimer -->
                    <div class="btn-group" role="group">
                        <form method="GET" action="/modifier/<%= book._id %>">
                            <button type="submit" class="btn btn-primary">Modifier</button>
                        </form>
                        <form method="POST" action="/supprimer/<%= book._id %>">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                    <!-- Fin des boutons -->
                </li>
            <% }); %>
        </ul>
    </div>
    <!-- Inclure les fichiers JavaScript Bootstrap (si nÃ©cessaire) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
